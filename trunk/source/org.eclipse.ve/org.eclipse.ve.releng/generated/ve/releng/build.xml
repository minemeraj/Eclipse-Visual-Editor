                    <jvmarg value="-Xmx1024m"/>
                    <jvmarg value="-XX:MaxPermSize=256m"/>

                    <arg value="-os" />
                    <arg value="${target.os}" />
                    <arg value="-ws" />
                    <arg value="${target.ws}" />
                    <arg value="-arch" />
                    <arg value="${target.arch}" />

