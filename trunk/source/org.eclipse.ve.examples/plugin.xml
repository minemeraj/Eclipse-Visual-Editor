<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="org.eclipse.ve.examples"
   name="%pluginName"
   version="0.5.0"
   provider-name="%providerName">

   <runtime>
      <library name="dept.jar">
         <export name="*"/>
      </library>
      <library name="javaexamples.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ve.java.core"/>
   </requires>


   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%dinnerPlanner"
            default="true"
            icon="images\graph.gif"
            extensions="dinner"
            contributorClass="org.eclipse.ve.internal.cde.core.ActionBarContributor"
            class="org.eclipse.ve.examples.cdm.dept.dinner.ui.DinnerGraphicalEditorPart"
            id="Dinner Planner">
      </editor>
      <editor
            name="%companyEditor"
            default="true"
            icon="images\graph.gif"
            extensions="cdmcmp"
            contributorClass="org.eclipse.ve.internal.cde.core.ActionBarContributor"
            class="org.eclipse.ve.examples.cdm.dept.ui.CompanyGraphicalEditorPart"
            id="Company Editor">
      </editor>
   </extension>
<!-- NOTE: For now, we need to make sure that there is in the classpath the following external jars
       pointed to be the variable JBCF_EXAMPLE. We are using the ClasspathVariableInitializer to do this.
       However, this will only do it once for a workspace. The better way would be to use a ContainerIntializer
       and this would be in that one container. That is because containers will be initialized
       for each session. A future Eclipse may allow Variables to be initialized for each session, so then a
       variable may still be the best way if there is only one file to copy.
       Can't use containers because they don't yet work in conjunction with Beaninfo/JBCF contributors.
       
       JBCF_EXAMPLE/jbcfexamplebeans.jar
   -->
<!-- For now we don't have an non-jve editor available.
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%javaExampleEditor"
            default="true"
            icon="icons\window16.gif"
            extensions="java_example"
            contributorClass="org.eclipse.ve.cde.ActionBarContributor"
            class="org.eclipse.ve.examples.java.JavaGraphicalEditorPart"
            id="Java Example">
      </editor>
   </extension>
-->
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="Visual Examples"
            class="org.eclipse.ve.internal.java.wizard.ClasspathWizardPage:JAVA_EXAMPLE"
            id="org.eclipse.ve.examples.java.visualexamples.classpathcontainerpage">
      </classpathContainerPage>
   </extension>
   <extension
         point="org.eclipse.ve.java.core.registrations">
      <variable
            contributor="org.eclipse.ve.examples.java.JavaExampleContributor"
            path="JAVA_EXAMPLE"
            palettecats="platform:/plugin/org.eclipse.ve.examples/examplecats.xmi">
         <extend
               runtime="vm/javaexamplebeans.jar"
               source="vm/javaexamplebeanssrc.zip">
         </extend>
      </variable>
   </extension>
   <extension
         point="org.eclipse.jem.beaninfo.registrations">
      <variable
            path="JAVA_EXAMPLE">
         <beaninfos>
            <beaninfo
                  kind="plugin"
                  path="/org.eclipse.ve.examples/vm/javaexamplebeaninfo.jar">
               <searchpath
                     package="org.eclipse.ve.examples.java.beaninfo">
               </searchpath>
            </beaninfo>
         </beaninfos>
      </variable>
   </extension>
   <extension
         point="org.eclipse.jem.beaninfo.overrides">
      <override
            package="org.eclipse.ve.examples.java.vm"
            path="platform:/plugin/org.eclipse.ve.examples/overrides/org/eclipse/ve/examples/java/vm">
      </override>
   </extension>
<!-- The following extension points add the BDK JavaBeans to the palette and also to the Add Container wizard -->
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="Bean Developer Kit"
            class="org.eclipse.ve.internal.java.wizard.ClasspathWizardPage:BDK"
            id="org.eclipse.ve.examples.java.classpathcontainerpage.bdk">
      </classpathContainerPage>
   </extension>
   <extension
         point="org.eclipse.ve.java.core.registrations">
      <variable
            path="BDK"
            palettecats="platform:/plugin/org.eclipse.ve.examples/bdk/bdkpalette.xmi">
         <extend
               runtime="bdk/juggler.jar">
         </extend>
         <extend
               runtime="bdk/jelly.jar">
         </extend>
         <extend
               runtime="bdk/select.jar">
         </extend>
         <extend
               runtime="bdk/molecule.jar">
         </extend>
         <extend
               runtime="bdk/test.jar">
         </extend>
      </variable>
   </extension>
<!-- as well as set up the bean info extension correctly so the BeanInfo classes are found by the introspector -->
<!-- The following extension points add the wizzo widgets JavaBeans to the palette and also to the Add Container wizard -->
<!-- End of extension points to define BDK beans -->
   <extension
         point="org.eclipse.jem.beaninfo.registrations">
      <variable
            path="WIZZO_WIDGETS">
         <beaninfos>
            <beaninfo
                  kind="plugin"
                  path="/org.eclipse.ve.examples/vm/wizzowidgets_dt.jar">
               <searchpath
                     package="com.abc.wizzowidgets.beaninfo">
               </searchpath>
            </beaninfo>
         </beaninfos>
      </variable>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="Wizzo Widgets"
            class="org.eclipse.ve.internal.java.wizard.ClasspathWizardPage:WIZZO_WIDGETS"
            id="com.abc.wizzowidgets.classpathcontainerpage">
      </classpathContainerPage>
   </extension>
   <extension
         point="org.eclipse.ve.java.core.registrations">
      <variable
            path="WIZZO_WIDGETS"
            palettecats="platform:/plugin/org.eclipse.ve.examples/wizzopalette.xmi">
         <extend
               runtime="vm/wizzowidgets.jar"
               source="src/wizzowidegets_src.zip"
               prefix="src">
         </extend>
      </variable>
   </extension>

</plugin>
